<p id="notice"><%= notice %></p>

<h1>Events</h1>
<%= form_tag events_path, method: :get do %>
  <%= text_field_tag :keyword %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descrption</th>
      <th>Is public</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.descrption %></td>
        <td><%= event.is_public %></td>
        <td><%= event.capacity %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Attendee List', event_attendees_path(event) %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Dashboard', dashboard_event_path(event) %></td>
        <td><%= button_to 'Public', public_event_path(event) %></td>
        <td><%= button_to 'Unpublic', unpublic_event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'Destroy all events', bulk_delete_events_path, data: { confirm: "This will destroy all events, are you sure?"} %>
<%= link_to 'New Event', new_event_path %>
