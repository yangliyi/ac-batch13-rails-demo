<% if current_user %>
  <%= link_to('登出', destroy_user_session_path, :method => :delete) %> |
  <%= link_to('修改密碼', edit_registration_path(:user)) %>
<% else %>
<%= link_to('註冊', new_registration_path(:user)) %> |
  <%= link_to('登入', new_session_path(:user)) %>
<% end %>

<h1>Events</h1>
<%= form_tag events_path, method: :get do %>
  <%= text_field_tag :keyword %>
  <%= submit_tag "Search" %>
<% end %> <br>

<%= form_tag events_path, method: :get do %>
  <%= select_tag "category", options_from_collection_for_select(Category.all, "name", "name", params[:category]), onchange: 'this.form.submit()', prompt: "All" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descrption</th>
      <th>Is public</th>
      <th>Capacity</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= check_box_tag "ids[]", event.id, false %><%= event.name %></td>
        <td><%= event.descrption %></td>
        <td><%= event.is_public %></td>
        <td><%= event.capacity %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', events_path(id: event) %></td>
        <td><%= link_to 'Attendee List', event_attendees_path(event) %></td>
        <td><%= link_to 'Dashboard', dashboard_event_path(event) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this @event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :descrption %>
    <%= f.text_area :descrption %>
  </div>

  <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: true) %>

  <p>Please select groups: </p>
  <%= f.collection_check_boxes(:group_ids, Group.all, :id, :name) %>

  <div class="field">
    <%= f.label :is_public %>
    <%= f.check_box :is_public %>
  </div>

  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
